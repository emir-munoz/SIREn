# util functions used by scripts

JAVA_HOME=/usr/lib/jvm/java-6-sun

JAVA_CMD=${JAVA_HOME}/bin/java

JAVA_PARAM="-server -Xms512m -Xmx2048m"

SCRIPT_HOME="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

BENCH_HOME=${SCRIPT_HOME}/../

TARGET_DIR=${BENCH_HOME}/target/

JAVA_CP="${TARGET_DIR}siren-benchmark-1.0-SNAPSHOT-jar-with-dependencies.jar"
